<mvc:View controllerName="aws.kyma.fioriawskyma.controller.App"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">  
    <App id="app">
        <pages>
            <Page id="Kyma" title="{i18n>title}">
                <content >
                    <Table id="idProductsTable"
                    inset="false"
                    items="{
                        path: 'kymaModel>/Books',
                        sorter: {
                            path: 'stock'
                        }
                    }" class= "sapUiSmallMarginTop">
                        <infoToolbar>
                            <OverflowToolbar>
                                <Label text="This sample applcation is pulling the data from CAP service which is deployed on KYMA"/>
                            </OverflowToolbar>
                        </infoToolbar>
                        <columns>
                            <Column
                                width="12em">
                                <Text text="Book ID" />
                            </Column>
                            <Column
                                minScreenWidth="Tablet"
                                demandPopin="true">
                                <Text text="Book Name" />
                            </Column>
                            <Column
                                minScreenWidth="Desktop"
                                demandPopin="true"
                                hAlign="End">
                                <Text text="Book Cost" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem vAlign="Middle">
                                <cells>
                                    <Text text="{kymaModel>ID}" />
                                    <Text text="{kymaModel>title}" />
                                    <Text text="{kymaModel>stock}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </content>
            </Page>    
        </pages>
    </App>
</mvc:View>